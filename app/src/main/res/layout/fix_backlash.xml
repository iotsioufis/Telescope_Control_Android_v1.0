<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.slider.Slider
        android:value="0"
        android:id="@+id/slider_camera_zoom_backlash"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="80dp"
        android:stepSize="1"
        android:valueFrom="0"
        android:valueTo="10"
        android:translationX="-58dp"
        android:translationY="-20dp"
        android:scaleX="1"
        android:scaleY="-1"
        android:rotation="270"
        android:layout_marginEnd="80dp"
        app:haloColor="@color/colorHighlighted"
        app:haloRadius="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_down_camera"
        app:layout_constraintEnd_toEndOf="@+id/button_open_close_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_axis"
        app:thumbColor="#2337a8"
        app:thumbRadius="15dp"
        app:tickColorActive="#b61313"
        app:tickColorInactive="#b61313"
        app:trackColorActive="#b61313"
        app:trackColorInactive="#b61313"
        app:trackHeight="6dp"/>

    <TextView
        android:textSize="13sp"
        android:textColor="@color/colorHighlighted"
        android:id="@+id/text_zoom_level"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Zoom \n Level "
        android:translationY="-25dp"
        android:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider_camera_zoom_backlash"/>

    <SurfaceView
        android:id="@+id/surfaceView_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RadioGroup
        android:theme="@style/RadioButtonStyle"
        android:orientation="horizontal"
        android:id="@+id/radio_group_axis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_up_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surfaceView_camera">

        <RadioButton
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorOff"
            android:id="@+id/radio_test_ra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:checked="true"
            android:text="Test RA \n   Axis   "
            android:layout_weight="0.6"
            android:layout_marginStart="10dp"/>

        <RadioButton
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorOff"
            android:id="@+id/radio_test_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Test DEC\n    Axis"
            android:layoutDirection="rtl"
            android:layout_marginStart="10dp"/>

    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_up_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:scaleY="1.3"
        android:rotation="270"
        android:elevation="20dp"
        app:backgroundTint="#2337a8"
        app:icon="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surfaceView_camera"
        app:shapeAppearanceOverlay="@style/direction.Button"
        style="@style/Widget.MaterialComponents.Button.Icon"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_right_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:scaleY="1.3"
        android:layout_marginStart="8dp"
        android:elevation="20dp"
        app:backgroundTint="#2337a8"
        app:icon="@android:drawable/ic_media_play"
        app:layout_constraintStart_toEndOf="@+id/button_stop_camera"
        app:layout_constraintTop_toTopOf="@+id/button_stop_camera"
        app:shapeAppearanceOverlay="@style/direction.Button"
        style="@style/Widget.MaterialComponents.Button.Icon"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_left_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        android:scaleY="1.3"
        android:rotation="180"
        android:layout_marginEnd="8dp"
        android:elevation="20dp"
        app:backgroundTint="#2337a8"
        app:icon="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toStartOf="@+id/button_stop_camera"
        app:layout_constraintTop_toTopOf="@+id/button_right_camera"
        app:shapeAppearanceOverlay="@style/direction.Button"
        style="@style/Widget.MaterialComponents.Button.Icon"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_open_close_camera"
        android:layout_width="125dp"
        android:layout_height="58dp"
        android:text="open camera"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:rotation="0"
        android:elevation="20dp"
        app:backgroundTint="#2337a8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/General.Button"
        style="@style/Widget.MaterialComponents.Button.Icon"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_test_fix"
        android:layout_width="125dp"
        android:layout_height="58dp"
        android:text="Check RA \n fix"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:rotation="0"
        android:elevation="20dp"
        app:backgroundTint="#2337a8"
        app:layout_constraintBottom_toBottomOf="@+id/surfaceView_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/General.Button"
        style="@style/Widget.MaterialComponents.Button.Icon"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add_fix"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="save fixes for point"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:rotation="0"
        android:elevation="20dp"
        app:backgroundTint="#2337a8"
        app:layout_constraintEnd_toStartOf="@+id/button_clear_last_fix"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_down_camera"
        app:shapeAppearanceOverlay="@style/General.Button"
        style="@style/Widget.MaterialComponents.Button.Icon"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_clear_last_fix"

        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="Clear last point fixes"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:rotation="0"
        android:elevation="20dp"
        app:backgroundTint="#2337a8"
        app:layout_constraintEnd_toStartOf="@+id/button_clear_all_fixes"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_add_fix"
        app:layout_constraintTop_toBottomOf="@+id/button_down_camera"
        app:shapeAppearanceOverlay="@style/General.Button"
        style="@style/Widget.MaterialComponents.Button.Icon"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_clear_all_fixes"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginRight="4dp"
        android:text="Reset all fixes"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:rotation="0"
        android:layout_marginEnd="4dp"
        android:elevation="20dp"
        app:backgroundTint="#2337a8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/button_clear_last_fix"
        app:layout_constraintTop_toBottomOf="@+id/button_down_camera"
        app:shapeAppearanceOverlay="@style/General.Button" style="@style/Widget.MaterialComponents.Button.Icon"/>



















    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_cross_test"
        android:layout_width="125dp"
        android:layout_height="58dp"
        android:text="cross test"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:rotation="0"
        android:elevation="20dp"
        app:backgroundTint="#2337a8"
        app:layout_constraintBottom_toBottomOf="@+id/surfaceView_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/General.Button" style="@style/Widget.MaterialComponents.Button.Icon"/>

    <com.google.android.material.button.MaterialButton
        android:textSize="12sp"
        android:id="@+id/button_stop_camera"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_width="64dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:minHeight="0dp"
        android:text="stop"
        android:textScaleX="1"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:elevation="40dp"
        app:backgroundTint="#b61313"
        app:layout_constraintBottom_toTopOf="@+id/button_down_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_up_camera"
        app:shapeAppearanceOverlay="@style/Stop.Button"
        style="@style/Widget.MaterialComponents.Button.Icon"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_down_camera"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:scaleY="1.3"
        android:rotation="90"
        android:elevation="20dp"
        app:backgroundTint="#2337a8"
        app:icon="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/button_up_camera"
        app:layout_constraintTop_toBottomOf="@+id/button_stop_camera"
        app:shapeAppearanceOverlay="@style/direction.Button"
        style="@style/Widget.MaterialComponents.Button.Icon"/>

    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="364dp"/>

    <View
        android:id="@+id/divider_camera_x1"
        android:background="#d50000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/surfaceView_camera"
        app:layout_constraintTop_toTopOf="@+id/surfaceView_camera"/>

    <View
        android:id="@+id/divider_camera_x2"
        android:background="#d50000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/surfaceView_camera"
        app:layout_constraintTop_toTopOf="@+id/surfaceView_camera"/>

    <View
        android:layout_gravity="center_vertical"
        android:id="@+id/divider_camera_y1"
        android:background="#d50000"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/surfaceView_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_gravity="center_vertical"
        android:id="@+id/divider_camera_y2"
        android:background="#d50000"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/surfaceView_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <EditText
        android:id="@+id/editText_backlash_steps"
        android:background="@drawable/back_border"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint=" Enter steps "
        android:inputType="numberDecimal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_test_fix"
        app:layout_constraintEnd_toStartOf="@+id/button_cross_test"
        app:layout_constraintLeft_toRightOf="@+id/button_test_fix"
        app:layout_constraintRight_toLeftOf="@+id/button_cross_test"
        app:layout_constraintStart_toEndOf="@+id/button_test_fix"
        app:layout_constraintTop_toTopOf="@+id/button_test_fix"/>

    <TextView
        android:textSize="14sp"
        android:textColor="#29bc34"
        android:id="@+id/text_object_selected_backlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="52dp"
        android:text=""
        android:layout_marginStart="20dp"
        android:elevation="39dp"
        android:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:textSize="14sp"
        android:textColor="#29bc34"
        android:id="@+id/text_east_or_west_backlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:layout_marginEnd="20dp"
        android:elevation="39dp"
        android:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_show_backlash_help"
        android:layout_width="68dp"
        android:layout_height="73dp"
        android:translationX="12dp"
        android:translationY="-9dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:rotation="0"
        android:elevation="30dp"
        app:backgroundTint="#2337a8"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Help.Button"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_fix_backlash_info"
        android:background="@drawable/back_border"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="14sp"
            android:id="@+id/text_backlash_fix_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Procedure for fixing the RA backlash error:
        \n\n1. Select &quot;Test RA Axis&quot; .
        \n2. Having a star in view , enter a small ( for example 20 ) number of steps.
        \n4. Press CHECK RA FIX . If the star did not move , enter a larger number and recheck .
        \n5. Repeat until the star is making the SMALLEST observable back and forth movement when CHECK RA FIX is pressed.
        \nA greater observable back and forth movement is an indication that the number of steps entered should be lowered .
        \n\n\nProcedure for fixing the DEC backlash error:
        \n
        \n1. Select &quot;Test DEC Axis&quot; .
        \n2. Having the same star in view enter a small ( for example 20 ) number of steps.
        \n4. Press CHECK DEC FIX . If the star did not move , enter a larger number and recheck .
        \n5. Repeat until the star is making the SMALLEST observable back and forth movement when CHECK DEC FIX is pressed.
        \nA greater observable back and forth movement is an indication that the number of steps entered should be lowered.
        \n\nTo save the backlash fixes and in order for them to be applied Press SAVE FIXES FOR POINT .
        \n\n\nIf the manual controls are used for recentering the star during the procedure , before pressing  CHECK RA FIX or CHECK DEC FIX , make sure
        \nto always end the manual control moves in the same directions that the GOTO move to that star ended .
        \nThese ending directions are indicated with red arrows if the 'Show motors' directions of the last Goto move' checkbox is checked in the Controls Screen .
        \n\nDifferent backlash fixes can be defined for different regions of the sky.
        \nIt is recommended that the procedure of fixing the backlash errors is executed on at least two stars : One in the Eastern hemisphere and one in the Western hemisphere .
        \n\nTo change the last backlash fixes , press CLEAR LAST POINT FIXES and repeate the procedures for fixing the RA and DEC backlash errors .
        \nTo delete all the saved backlash fixes , press RESET ALL FIXES .
        \n\n\nCross Test :
        \nCross test is an automated utility for a) detecting the backlash error and b) testing if the applied fixes are correct .
        \nDuring a Cross Test , the telescope will move the same distance in all directions and the resulting movement of the star in view will be a cross-like or X-like pattern .
        \nA correct backlash fix will result in a symmetrical cross (or X) with equal opposing sides .
        \nTo perform a Cross Test , press CROSS TEST to open the Cross Test screen .
        \nAdjust the Threshold slider so that the star in view is encircled in a red circle .
        \nPress RUN CROSS TEST and enter the distance that the star should move in all directions .
        \nPress OK and wait for the cross move to end . The results will be shown on the top side of the screen ."
           android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/frame_fix_backlash_info"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_close_backlash_help"
            android:layout_width="68dp"
            android:layout_height="73dp"
            android:translationX="12dp"
            android:translationY="-9dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:rotation="0"
            android:elevation="30dp"
            app:backgroundTint="#2337a8"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconSize="45dp"
            app:iconTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Help.Button"/>

        <Button
            android:id="@+id/button_hide_backlash_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Close"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:backgroundTint="#2337a8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_backlash_fix_info"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

