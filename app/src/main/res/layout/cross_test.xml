<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.opencv.android.JavaCameraView
        android:id="@+id/cameraview_cross_test"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_run_cross_test"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_marginTop="4dp"
        android:rotation="0"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:text="run \ncross test"
        app:backgroundTint="#2337a8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_clear_image"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cameraview_cross_test"
        app:shapeAppearanceOverlay="@style/General.Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_clear_image"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:rotation="0"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:text="clear \nimage"
        app:backgroundTint="#2337a8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_run_cross_test"
        app:layout_constraintTop_toTopOf="@+id/button_run_cross_test"
        app:shapeAppearanceOverlay="@style/General.Button" />


    <TextView
        android:id="@+id/text_threshold_cross_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Threshlod : "
        android:textColor="@color/colorHighlighted"
        app:layout_constraintBottom_toTopOf="@+id/slider_threshold_cross_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_threshold_cross_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:stepSize="1"
        android:value="180"
        android:valueFrom="0"
        android:valueTo="255"
        app:haloColor="@color/colorHighlighted"
        app:haloRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:thumbColor="#2337a8"
        app:thumbRadius="16dp"
        app:tickColorInactive="@color/colorHighlighted"
        app:trackColorActive="#2337a8"
        app:trackColorInactive="@color/cardview_dark_background"
        app:trackHeight="20dp"
        tools:layout_editor_absoluteY="705dp"
        app:layout_constraintTop_toBottomOf="@id/button_run_cross_test"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_cross_test"
        android:background="@drawable/back_border"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:elevation="30dp"
        app:layout_constraintTop_toBottomOf="@+id/cameraview_cross_test"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:textSize="16sp"
            android:textColor="#676871"
            android:gravity="center_horizontal"
            android:id="@+id/text_enter_degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:text="Enter number of degrees (0 to 5) :\n\nHint : The number should be smaller than \nhalf of the eyepiece&apos;s FOV .   "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/editText_cross_degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter degrees"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_enter_degrees"/>

        <Button
            android:id="@+id/button_ok_cross"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="OK"
            android:scaleX="0.9"
            android:scaleY="0.9"
            app:backgroundTint="#2337a8"
            app:layout_constraintEnd_toStartOf="@+id/button_cancel_cross"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_cross_degrees"/>

        <Button
            android:id="@+id/button_cancel_cross"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="CANCEL"
            android:scaleX="0.9"
            android:scaleY="0.9"
            app:backgroundTint="#2337a8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_ok_cross"
            app:layout_constraintTop_toTopOf="@+id/button_ok_cross"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_ra_backlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Detected RA backlash  : - "
        android:textColor="#29bc34"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cameraview_cross_test" />/>

    <TextView
        android:id="@+id/text_dec_backlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"
        android:text="Detected DEC backlash  : - "
        android:textColor="#29bc34"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cameraview_cross_test" />


</androidx.constraintlayout.widget.ConstraintLayout>

